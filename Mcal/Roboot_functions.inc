

#ifndef ROBOT_H_
#define ROBOT_H_
.ORG 0X600



STOP:

RET
GO_FORWARD :
 CBI PORTB,PIN0 // SET PIN0 IN PORTA
 SBI PORTB,PIN1 // CLEAR PIN1 IN PORTA
 
 SBI PORTB,PIN2 
 CBI PORTB,PIN3
RET






GO_BACK :

   SBI PORTB,PIN0 // SET PIN0 IN PORTA
 CBI PORTB,PIN1 // CLEAR PIN1 IN PORTA
 
 CBI PORTB,PIN2 
 SBI PORTB,PIN3

RET




GO_LEFT:
 SBI PORTB,PIN0 // SET PIN0 IN PORTA
 CBI PORTB,PIN1 // CLEAR PIN1 IN PORTA
 SBI PORTB,PIN2 
 CBI PORTB,PIN3


RET
GO_RIGHIT:
  CBI PORTB,PIN0 // SET PIN0 IN PORTA
 SBI PORTB,PIN1 // CLEAR PIN1 IN PORTA
 CBI PORTB,PIN2 
 SBI PORTB,PIN3


RET
BUZZER_ON: 
          SBI DDRB , PB4
          SBI PORTB , PB4       ;SET PB4
RET

BUZZER_OFF:
          SBI DDRB , PB4
          CBI PORTB , PB4     ;CLEAR PB4
 RET  
 BLED_ON : 
		 SBI DDRD , PD6
		 SBI PORTD , PD6
RET 
BLED_OFF:
         SBI DDRD , PD6
		 CBI PORTD , PD6
RET 
FLED_ON:
		SBI DDRA,PA0
		SBI PORTA,PA0
		RET
FLED_OFF:
	    SBI DDRA,PA0
		CBI PORTA,PA0
		RET
RLED_ON:
        SBI DDRA,PA1
		SBI PORTA,PA1
		RET
RLED_OFF:
		SBI DDRA,PA1
		CBI PORTA,PA1
		RET
LLED_ON:
		SBI DDRA,PA2
		SBI PORTA,PA2
		RET
LLED_OFF:
		SBI DDRA,PA0
		CBI PORTA,PA0
		RET
 
#endif

